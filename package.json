{
  "name": "rakuda",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "typecheck": "turbo run typecheck",
    "db:migrate": "turbo run db:migrate --filter=@rakuda/database",
    "db:generate": "turbo run db:generate --filter=@rakuda/database",
    "db:studio": "turbo run db:studio --filter=@rakuda/database",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "bootstrap": "./scripts/bootstrap.sh",
    "verify:joom": "npx tsx scripts/verify-joom-connection.ts",
    "joom:dry-run": "npx tsx scripts/phase41-dry-run.ts",
    "joom:test-listing": "npx tsx scripts/phase41b-test-listing.ts",
    "joom:batch-publish": "npx tsx scripts/phase41c-batch-publish.ts",
    "joom:batch-publish:dry": "npx tsx scripts/phase41c-batch-publish.ts --dry-run",
    "canary:status": "npx tsx scripts/canary-release.ts --status",
    "canary:phase1": "npx tsx scripts/canary-release.ts --phase=1",
    "canary:phase2": "npx tsx scripts/canary-release.ts --phase=2",
    "canary:phase3": "npx tsx scripts/canary-release.ts --phase=3",
    "canary:phase4": "npx tsx scripts/canary-release.ts --phase=4",
    "canary:rollback": "npx tsx scripts/canary-release.ts --rollback",
    "seed:high-value": "npx tsx scripts/add-high-value-products.ts",
    "seed:high-value:dry": "npx tsx scripts/add-high-value-products.ts --dry-run",
    "cleanup:high-value-errors": "npx tsx scripts/cleanup-high-value-errors.ts",
    "cleanup:high-value-errors:dry": "npx tsx scripts/cleanup-high-value-errors.ts --dry-run",
    "ebay:setup": "./scripts/setup-ebay-sandbox.sh",
    "ebay:e2e": "npx tsx scripts/ebay-e2e-test.ts",
    "ebay:e2e:dry": "npx tsx scripts/ebay-e2e-test.ts --dry-run",
    "ebay:e2e:cleanup": "npx tsx scripts/ebay-e2e-test.ts --cleanup",
    "start:prod": "NODE_ENV=production turbo run start --filter=@rakuda/api",
    "worker:prod": "NODE_ENV=production turbo run start --filter=@rakuda/worker",
    "start:all:prod": "NODE_ENV=production npm run start:prod & npm run worker:prod",
    "docker:prod:up": "docker compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "docker:prod:build": "docker compose -f docker-compose.prod.yml build"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "msw": "^2.12.8",
    "supertest": "^7.2.2",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "seed": "npx tsx packages/database/prisma/seed.ts"
  },
  "packageManager": "npm@10.0.0",
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@radix-ui/react-select": "^2.2.6",
    "@tanstack/react-virtual": "^3.13.18",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "hono": "^4.11.9",
    "sonner": "^2.0.7",
    "tailwindcss-animate": "^1.0.7"
  }
}
