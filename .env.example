# ========================================
# Database
# ========================================
DATABASE_URL="postgresql://als_user:als_password@localhost:5432/als_development"

# ========================================
# Redis
# ========================================
REDIS_URL="redis://localhost:6379"

# ========================================
# Object Storage (MinIO / S3)
# ========================================
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minio_access_key"
S3_SECRET_KEY="minio_secret_key"
S3_BUCKET="images"
S3_REGION="us-east-1"

# ========================================
# Proxy (本番のみ - 住宅用プロキシ)
# ========================================
# PROXY_HOST="gate.smartproxy.com"
# PROXY_PORT="7000"
# PROXY_USER="your_username"
# PROXY_PASS="your_password"

# ========================================
# OpenAI (翻訳・属性抽出)
# ========================================
# OPENAI_API_KEY="sk-..."

# ========================================
# Joom API
# ========================================
# JOOM_MERCHANT_ID="..."
# JOOM_API_KEY="..."

# ========================================
# eBay API
# ========================================
# EBAY_CLIENT_ID="..."
# EBAY_CLIENT_SECRET="..."
# EBAY_REFRESH_TOKEN="..."

# ========================================
# App Settings
# ========================================
NODE_ENV="development"
LOG_LEVEL="debug"
API_PORT="3000"
BULL_BOARD_PORT="3001"

# ========================================
# Authentication (Phase 11)
# ========================================
# API認証キー（本番では強力なランダム文字列を使用）
# 生成例: openssl rand -hex 32
API_KEY="your-secure-api-key-here"

# 認証の有効/無効（開発時は false に設定可能）
AUTH_ENABLED=true

# 認証失敗の最大回数
AUTH_MAX_FAILED_ATTEMPTS=5

# ロックアウト期間（ミリ秒、デフォルト15分）
AUTH_LOCKOUT_DURATION_MS=900000

# ========================================
# CORS Settings
# ========================================
# 許可するオリジン（カンマ区切り）
CORS_ORIGINS="http://localhost:3002,http://localhost:3000"

# ========================================
# Notification Settings
# ========================================
# SLACK_WEBHOOK_URL=""
# DISCORD_WEBHOOK_URL=""
# LINE_NOTIFY_TOKEN=""

# ========================================
# Alert System (Phase 26)
# ========================================
# Email (Nodemailer)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER=""
# SMTP_PASS=""
# ALERT_EMAIL_FROM="noreply@rakuda.example.com"
# ALERT_EMAIL_TO="admin@example.com"

# App URL (Deep Link用)
WEB_APP_URL="http://localhost:3001"

# ========================================
# Realtime Dashboard (Phase 27)
# ========================================
# SSE有効/無効
REALTIME_ENABLED=true

# ハートビート間隔（ミリ秒）
SSE_HEARTBEAT_INTERVAL=30000

# イベントデバウンスウィンドウ（ミリ秒）
SSE_DEBOUNCE_WINDOW=500

# ========================================
# Backup Settings
# ========================================
BACKUP_DIR="./backups"
RETENTION_DAYS=7
